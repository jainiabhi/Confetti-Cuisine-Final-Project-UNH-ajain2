<div class="data-form">
  <form class="form-signin" action="<%=`/vacations/${vacation._id}/update?_method=PUT`%>" method="POST">
    <h2 class="form-signin-heading">Edit a Culinary Vacation Package:</h2>

    <label for="inputTitle">Title</label>
    <input type="text" name="title" id="inputTitle" class="form-control" minlength="3" autofocus required placeholder="Unique title for vacation" value="<%= vacation.title %>">

    <label for="inputDescription">Description</label>
    <input type="text" name="description" id="inputDescription" class="form-control" placeholder="Description of package" required="" value="<%= vacation.description %>">

    <label for="currentCuisine">Current cuisine type </label>
    <br>
    <input type="textbox" name="currentCuisine" id="currentCuisine" value="<%= vacation.cuisine %>" readonly>
    <br>

    <label for=" inputCuisine ">New cuisine type</label>
    <select name="cuisine" id="inputCuisine " required="" class="form-control" value="<%= vacation.cuisine %>">
      <option value="" disabled="">--Please choose an option--</option>
      <option value="Continental">Continental</option>
      <option value="Traditional">Traditional</option>
      <option value="Haute-cuisine">Haute-cuisine</option>
      <option value="Nouvelle-cuisine">Nouvelle-cuisine</option>
      <option value="Fusion">Fusion</option>
      <option value="Vegan">Vegan</option>
      <option value="Vegetarian">Vegetarian</option>
      <option value="Asian">Asian</option>
      <option value="Indian">Indian</option>
      <option value="Middle-Eastern">Middle-Eastern</option>
      <option value="African">African</option>
      <option value="Central American">Central American</option>
      <option value="South American">South American</option>
    </select>

    <label for="inputHeroImage">Vacation 'hero image' filename</label>
    <input type="text" name="heroImage" id="inputHeroImage" class="form-control" placeholder="Filename for vacation package hero image, e.g., Thai.jpg" value="<%= vacation.heroImage %>">

    <label for="inputMaxTravelers">Max Travelers</label>
    <input type="number" name="maxTravelers" id="inputMaxTravelers" class="form-control" placeholder="Maximum # of travelers" min="0" max="25" required="" value="<%= vacation.maxTravelers %>">

    <label for="inputCost">Cost ($)</label>
    <input type="number" name="cost" id="inputCost" class="form-control" placeholder="Cost per person" min="0" required="" value="<%= vacation.cost %>">

    <label for="inputDestination">Destination</label>
    <input type="text" name="destination" id="inputDestination" class="form-control" placeholder="Vacation package destination: City, Country" required="" value="<%= vacation.destination %>">

    <label for="currentCuisine">Current Departure Location: </label>
    <br>
    <input type="textbox" name="currentDepartureLocation" id="currentDepartureLocation" value="<%= vacation.departureLocation %>" readonly>
    <br>

    <label for=" inputDepatureLocation ">New Departure Location</label>
    <select name="departureLocation" id="inputDepartureLocation " class="form-control" required="" value="<%= vacation.departureLocation %>">
      <option value="" disabled="">--Please choose an option--</option>
      <option value="New York (JFK)">New York (JFK)</option>
      <option value="Boston (BOS)">Boston (BOS)</option>
      <option value="Chicago (ORD)">Chicago (ORD)</option>
      <option value="Miami (MIA)">Miami (MIA)</option>
      <option value="St. Louis (STL)">St. Louis (STL)</option>
      <option value="Dallas (DFW)">Dallas (DFW)</option>
      <option value="Seattle (SEA)">Seattle (SEA)</option>
      <option value="San Francisco (SFO)">San Francisco (SFO)</option>
    </select>

    <label for="inputDepartureDate">Departure Date</label>
    <input type="date" name="departureDate" id="inputDepartureDate" class="form-control" placeholder="Date leaving" required value="<%= new Date(vacation.departureDate).toISOString().substring(0, 10) %>">

    <label for="inputReturnDate">Return Date</label>
    <input type="date" name="returnDate" id="inputReturnDate" class="form-control" placeholder="Date returning" required value="<%= new Date(vacation.returnDate).toISOString().substring(0, 10) %>">

    <br><button class="btn btn-lg btn-primary btn-block" type="submit">Save</button>
  </form>
</div>